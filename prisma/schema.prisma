// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider      = "prisma-client-js"
  engineType    = "library"
  binaryTargets = ["native"]
}


datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id              String          @id @default(cuid())
  uid             String          @unique
  name            String
  email           String?         @unique
  avatarUrl       String?
  role            String          @default("Employee")
  rank            String?
  baseSalary      Float           @default(0)
  totalSalary     Float           @default(0)
  attendanceRate  Float           @default(0)
  daysAbsent      Int             @default(0)
  workDays        String          @default("")
  accountStatus   String          @default("Pending")
  startDate       DateTime?
  jobDescription  String?
  fingerprintId   Int?
  nationalId      String?
  birthDate       DateTime?
  maritalStatus   String?         @default("Single") // Single, Married, Divorced, etc.
  childrenCount   Int             @default(0)
  phoneNumber     String?
  cnasNumber      String?
  attendances     Attendance[]
  payrollRecords  PayrollRecord[]
  createdAt       DateTime        @default(now())
  updatedAt       DateTime        @updatedAt
  attendanceLogs  AttendanceLog[]
}

model Device {
  id              String           @id @default(cuid())
  deviceId        String           @unique
  name            String
  status          String           @default("Offline")
  lastSeen        DateTime?
  allowedLat      Float?
  allowedLng      Float?
  allowedRadius   Int              @default(100) // meters
  locationLogs    LocationLog[]
  attendances     Attendance[]
  attendanceLogs  AttendanceLog[]
  createdAt       DateTime         @default(now())
  updatedAt       DateTime         @updatedAt
}

model LocationLog {
  id        String   @id @default(cuid())
  deviceId  String
  device    Device   @relation(fields: [deviceId], references: [deviceId])
  lat       Float
  lng       Float
  timestamp DateTime @default(now())
}

model AttendanceLog {
  id            String   @id @default(cuid())
  userId        String?
  user          User?    @relation(fields: [userId], references: [id])
  deviceId      String?
  device        Device?  @relation(fields: [deviceId], references: [deviceId])
  fingerprintId Int
  timestamp     DateTime @default(now())
  status        String   // ACCEPTED, REJECTED, FLAGGED
  reason        String?  // "OUTSIDE_GEOFENCE", "SPEED_CHECK_FAILED"
  riskLevel     String   @default("LOW") // LOW, MEDIUM, HIGH
  lat           Float?
  lng           Float?
}

model Attendance {
  id            String   @id @default(cuid())
  userId        String
  user          User     @relation(fields: [userId], references: [id])
  date          String   
  checkInTime   DateTime?
  checkOutTime  DateTime?
  status        String   
  // New fields for V2 features
  deviceId      String?
  device        Device?  @relation(fields: [deviceId], references: [deviceId])
  lat           Float?
  lng           Float?
  riskLevel     String   @default("LOW")
  
  createdAt     DateTime @default(now())
  updatedAt     DateTime @updatedAt
}

model PayrollRecord {
  id                 String   @id @default(cuid())
  userId             String
  user               User     @relation(fields: [userId], references: [id])
  month              String   // e.g. "2024-01"
  
  jobTitle           String?
  hourlyRate         Float    @default(0)
  hoursWorked        Float    @default(0)
  daysWorked         Float    @default(0)
  isHourBased        Boolean  @default(true)
  
  baseSalary         Float    @default(0)
  
  transportAllowance Float    @default(0)
  zoneAllowance      Float    @default(0)
  seniorityAllowance Float    @default(0)
  familyAllowance    Float    @default(0)
  otherAllowance     Float    @default(0)
  otherAllowanceName String?
  
  grossSalary        Float    @default(0)
  cnas               Float    @default(0)
  irg                Float    @default(0)
  netSalary          Float    @default(0)
  
  createdAt          DateTime @default(now())
  updatedAt          DateTime @updatedAt

  @@unique([userId, month])
}

model SystemSetting {
  id             String @id @default("default")
  payCutRate     Float  @default(0)
  companyName    String @default("Solminder Inc.")
  companyAddress String @default("")
}

model SensorStatus {
  id        String   @id @default("default")
  status    String   @default("Offline")
  lastSeen  DateTime @default(now())
  message   String?
  updatedAt DateTime @updatedAt
  enrollmentMode Boolean @default(false)
  enrollmentTargetId Int?
}
